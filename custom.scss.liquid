/*================ Slideshow Customization ================*/
.slideshow-wrapper{

	.slideshow__text-content{
		width: 300px;
		height: 300px;
		border-radius: 150px;
		border: 1px solid white;
		padding: 7px;
		position: absolute;
		text-align: center;
		@include transformY(-10%);

		&:hover{
			cursor: pointer;
			@include media-query($medium-up){
				.page-width{
					background-color: white !important;
				}
				.mega-title,.mega-subtitle{
					color: $aboki-orange;	
				}
				
			}
		}


		a.slideshow__link{
			position: absolute;
			z-index: 10;
			background-color: transparent;
			display: block;
			width: 100%;
			height: 100%;
		}

		&.coa-left{
			left: 5%;
		}

		&.coa-right{
			right: 5%;
		}

		@include media-query($medium-down){
			width: 250px;
			height: 250px;
			
		}

		@include media-query($extra-small){
			width: 100%;
			height: auto;
			border-radius: 0px;
			border: 0px solid white;
			padding: 0px;
			@include noTransform;
			top: auto;
			bottom: 10%;

			&.coa-left{
				left: auto;
			}

			&.coa-right{
				right: auto;
			}
		}

		.page-width{
			position: relative;
			padding: 0px;
			width: 100%;
			height:100%;
			border-radius: 150px;
			@include trans_prop;

			@include media-query($extra-small){
				border-radius: 0px;
			}
		} 

		.mega-title, .mega-subtitle{
			@include trans_prop;
			font-family: $main-font;
			letter-spacing: $kerning;
			text-transform: uppercase;
			width: 90%;

		}

		.mega-title{
			position: absolute;
			top: 50%;
			left: 50%;
			@include transformXY(-50%,-50%);
			font-size: $title-font-size;
			line-height: auto;
			margin: 0px auto;

			i{
				display: block;
				font-size: 10px;
				font-family: $serif-font;
				margin-top: 0px;
				margin-bottom: 5px;

				@include media-query($extra-small){
					display: inline-block;
				}
			}

			@include media-query($medium-down){
				@include transformXY(-40%,-50%);
				font-size: 18px;
				letter-spacing: .1em;
			}

			@include media-query($extra-small){
				position: relative;
				top: 0;
				left: 0;
				padding: 20px 0px; 
				font-size: 16px;
				@include noTransform;
			}

			.mega-subtitle,span{
				display: block;
				font-size: 10px;
				line-height: 14px;
				margin-top: 6px;
				padding: 0;
				width: auto;
				text-align: center;
			}
		}

	}
}

