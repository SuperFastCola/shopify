/*================ Square Button Customization ================*/
.square-button{
	position: relative;
	background-color: white;
	padding: 30px 0px 20px 0px;
	position: relative;
	min-height: 300px;
	margin: 0 auto 30px auto;
	cursor: pointer;

	@include media-query($small){
		width: 100%;	
		min-height: auto;
		margin: 0px auto 20px auto;
	}

	@include trans_prop;

	&:hover{

		@include media-query($medium-up){
			background-color: $aboki-orange;

			h3,.h3,p{
				color: white;
			}		
		}
	}

	&.with-icon{

		&:hover{
			@include media-query($medium-up){
				img,svg{
					filter: brightness(10);
				}
			}
		}

		img,svg{
			filter: brightness(1);
			display: block;
			width: 20%;
			height: auto;
			margin: 30px auto 30px auto;
			@include trans_prop(filter,0s);

			@include media-query($medium-down){
				margin: 0px auto 20px auto;
			}
		}
	}

	.no-icon{
		position: absolute;
		top: 50%;
		width: 100%;
		left: 50%;
		@include transformXY(-50%,-50%);

		@include media-query($small){
			position: relative;
			top: auto;
			left: auto;
			@include noTransform();
		}
	}

	a{
		cursor: pointer;
		position: absolute;
		display: block;
		width: 100%;
		height: 100%;
		top: 0;
		left: 0;
		z-index: 20;
