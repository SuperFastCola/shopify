/*================ TAKEN and SLIGHTLY CHANGED FROM THEME.SCSS ================*/
$grid-small: 600px;
$grid-medium: 768px;
$grid-large: 990px;
$grid-widescreen: 1400px;
$grid-gutter: 30px;
$grid-gutter-mobile: 22px;

$extra-small: 'extra-small';
$small: 'small';
$medium: 'medium';
$medium-down: 'medium-down';
$medium-up: 'medium-up';
$large: 'large';
$large-down: 'large-down';
$large-up: 'large-up';
$widescreen: 'widescreen';

$grid-breakpoints: (
  $extra-small '(max-width: #{$grid-small})',
  $small '(max-width: #{$grid-medium - 1})',
  $medium '(min-width: #{$grid-medium}) and (max-width: #{$grid-large - 1})',
  $medium-down '(max-width: #{$grid-large - 1})',
  $medium-up '(min-width: #{$grid-medium})',
  $large '(min-width: #{$grid-large}) and (max-width: #{$grid-widescreen - 1})',
  $large-down '(max-width: #{$grid-widescreen - 1})',
  $large-up '(min-width: #{$grid-large})',
  $widescreen '(min-width: #{$grid-widescreen})'
);

/*================ Media Query Mixin ================*/
@mixin media-query($media-query) {
  $breakpoint-found: false;

  @each $breakpoint in $grid-breakpoints {
    $name: nth($breakpoint, 1);
    $declaration: nth($breakpoint, 2);

    @if $media-query == $name and $declaration {
      $breakpoint-found: true;

      @media only screen and #{$declaration} {
        @content;
      }
    }
  }

  @if $breakpoint-found == false {
    @warn 'Breakpoint "#{$media-query}" does not exist';
  }
}

/*================ Custom Mixins ================*/
@mixin transformXY($y:0%, $x:0%){
	-ms-transform: translateY($y) translateX($x);
	-webkit-transform: translateY($y) translateX($x);
	transform: translateY($y) translateX($x);
}

@mixin noTransform(){
	-ms-transform: none;
	-webkit-transform: none;
	transform: none;
}

@mixin transformX($x:0%){
	-ms-transform: translateX($x);
	-webkit-transform: translateX($x);
	transform: translateX($x);	
}

@mixin transformY($y:0%){
	-ms-transform: translateY($y);
	-webkit-transform: translateY($y);
	transform: translateY($y);	
}


@mixin trans_prop($prop:all, $time:.25s){
	-webkit-transition: $prop $time;
	-moz-transition: $prop $time;
	-o-transition: $prop $time;
	transition: $prop $time;
}

@mixin backgroundImage($postion){
	background-repeat: no-repeat;
	background-position: #{$postion};
}



