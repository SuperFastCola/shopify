    border-radius: 0 0 0 0;
    margin: 15px 0px;
}

.rss-feed-sec .entry-image{
	position: relative;
	overflow: hidden;
	background-size: cover;
	min-height: 170px;

	@media only screen and (min-width: 1200px) {
		min-height: 280px;
	}

	@media only screen and (max-width: 767px) {
		min-height: 300px;
	}

	@media only screen and (max-width: 480px) {
		min-height: 230px;
	}

	@media only screen and (max-width: 375px) {
		min-height: 200px;
	}
}

.rss-feed-sec h4, .rss-feed-sec a{
	transition: all .25s;
}

.rss-feed-sec h4:hover, .rss-feed-sec a:hover{
	opacity: .5;
}

.rss-feed-sec .entry-image img{
	position: relative;
	display: block;
	transition: all .25s;
}

.rss-feed-sec .entry-wrapper .entry-image:hover img{
	opacity: .5;	
	-ms-transform: scale(1.2, 1.2); /* IE 9 */
    -webkit-transform: scale(1.2, 1.2); /* Safari */
    transform: scale(1.2, 1.2);
}

.rss-feed-sec .entry-content a.read{
	color: #FF5A00;
	text-transform: uppercase;
	text-decoration: underline;
}

